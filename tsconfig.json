{
  "compilerOptions": {
    "target": "ES2022",
    "module": "commonjs",
    "outDir": "dist",
    "rootDir": ".",
    "strict": false,
    "noImplicitAny": false,      
    "esModuleInterop": true,
    "skipLibCheck": true,
    "forceConsistentCasingInFileNames": true,
    "resolveJsonModule": true,
    "sourceMap": true,
    "declaration": true,
    "moduleResolution": "node",
    "baseUrl": ".",  // Added this
    "paths": {
      "@/*": ["src/*"]  // Changed to use src-relative paths
    }
  },
  "include": [
    "src/**/*"
, "src/shared", "services"  ],
  "exclude": [
    "node_modules",
    "build"
  ]
}